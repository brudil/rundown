{
  "name": "cue-server",
  "version": "0.1.0",
  "description": "Backend API server for cue",
  "main": "dist/index.js",
  "author": "James Canning",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@types/hapi": "^17.0.4",
    "apollo-codegen": "^0.19.0",
    "apollo-server-hapi": "^1.3.2",
    "bcrypt": "^1.0.3",
    "graphql": "^0.13.1",
    "graphql-subscriptions": "^0.5.8",
    "graphql-tools": "^2.21.0",
    "hapi": "^17.2.2",
    "hapi-auth-jwt2": "^8.0.0",
    "jsonwebtoken": "^8.2.0",
    "pg": "^7.4.1",
    "reflect-metadata": "^0.1.12",
    "subscriptions-transport-ws": "^0.9.6",
    "ts-node": "^5.0.1",
    "typeorm": "^0.1.15"
  },
  "devDependencies": {
    "@types/bcrypt": "^1.0.0",
    "@types/graphql": "^0.12.4",
    "@types/jsonwebtoken": "^7.2.5",
    "@types/node": "^9.4.6",
    "prettier": "^1.11.1",
    "typescript": "^2.7.2"
  },
  "scripts": {
    "dev": "`yarn bin`/tsc --watch",
    "build": "`yarn bin`/tsc",
    "run-dev": "`yarn bin`/ts-node src/index.ts",
    "format": "`yarn bin`/prettier \"src/**/*.{ts,tsx,js,css,graphql}\" --write",
    "gengraphql": "yarn genschema && yarn gentypes",
    "genschema": "apollo-codegen introspect-schema ./src/schema.graphql --output schema.json",
    "gentypes": "apollo-codegen generate **/*.graphql --schema schema.json --target typescript --output ./src/generatedSchemaTypes.ts"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always"
  }
}
